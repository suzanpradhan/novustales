{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  // text editing stuff
  "editor.linkedEditing": true,
  "editor.inlineSuggest.enabled": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  // font
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.42857, // makes font size 14 have line height of ~20px
  "apc.font.family": "Fira Code",
  // cursor
  "editor.cursorBlinking": "smooth", // smol cursor animation, looks nice
  "editor.cursorSmoothCaretAnimation": "on",
  "cSpell.words": ["autovalidate", "Formz", "Obsecure", "unfocus"] // move cursor smoothly
}
